<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/popup_create_bg_gray_plate3">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text = "매일"
            android:layout_marginRight="5dp"
            android:background="@drawable/popup_create_box2"
            android:id = "@+id/all_day_button"
            android:layout_weight="1"/>
        
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text = "주중"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/popup_create_box2"
            android:id = "@+id/weekdays_button"
            android:layout_weight="1"/>
        
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text = "주말"
            android:layout_marginLeft="5dp"
            android:background="@drawable/popup_create_box2"
            android:id = "@+id/weekend_button"
            android:layout_weight="1"/>

    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text = "월요일마다"
            android:id = "@+id/monday_button"
            android:layout_marginTop="10dp"
            android:background="@drawable/popup_create_box1_nonselection"/>
        
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text = "화요일마다"
            android:id = "@+id/tuesday_button"
            android:layout_marginTop="3dp"
            android:background="@drawable/popup_create_box1_nonselection"/>
        
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text = "수요일마다"
            android:id = "@+id/wednesday_button"
            android:layout_marginTop="3dp"
            android:background="@drawable/popup_create_box1_nonselection"/>
        
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text = "목요일마다"
            android:id = "@+id/thursday_button"
            android:layout_marginTop="3dp"
            android:background="@drawable/popup_create_box1_nonselection"/>
        
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text = "금요일마다"
            android:id = "@+id/friday_button"
            android:layout_marginTop="3dp"
            android:background="@drawable/popup_create_box1_nonselection"/>
        
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text = "토요일마다"
            android:id = "@+id/saturday_button"
            android:layout_marginTop="3dp"
            android:background="@drawable/popup_create_box1_nonselection"/>
        
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text = "일요일마다"
            android:id = "@+id/sunday_button"
            android:layout_marginTop="3dp"
            android:background="@drawable/popup_create_box1_nonselection"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">
        
        <Button 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id = "@+id/okay_button"
            android:text = "확인"
            android:layout_marginRight="2dp"
            android:background="@drawable/popup_btn_ok_2"/>
        <Button 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id = "@+id/cancel_button"
            android:text = "취소"
            android:layout_marginLeft="2dp"
            android:background="@drawable/popup_btn_cancle"/>        
    </LinearLayout>

</LinearLayout>