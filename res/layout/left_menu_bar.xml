<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/left_menu_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_menu_bg_top"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:orientation="vertical" android:background="@drawable/left_menu_bg_main" android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="목표 설정" android:textSize="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/addPromiseLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_menu_bar_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" android:clickable="true">

        <ImageView
            android:id = "@+id/bannerTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_menu_ico_create_promise" android:layout_marginLeft="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="목표생성"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/myPromiseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_menu_bar_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_menu_ico_my_promise" android:layout_marginLeft="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="나의목표"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/helperPromiseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_menu_bar_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_menu_ico_favorite_promise" android:layout_marginLeft="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="관심목표"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/friendPromiseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_menu_bar_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_menu_ico_friends_promise" android:layout_marginLeft="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="목표뉴스"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@drawable/left_menu_bg_main"
        android:orientation="vertical" android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="일반" android:layout_marginLeft="6dp" android:textSize="12dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:id = "@+id/pointShopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_menu_bar_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_menu_ico_pointshop" android:layout_marginLeft="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="포인트샵"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/pointshopItemLayout1"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/pointshop_item_selector"
            android:gravity="center"
            android:orientation="vertical" android:layout_marginBottom="6dp" android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/test" />

            <TextView
                android:id="@+id/pointShopItemText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="사랑의 우표" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pointshopItemLayout2"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/pointshop_item_selector"
            android:gravity="center"
            android:orientation="vertical" android:layout_marginBottom="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/test2" />

            <TextView
                android:id="@+id/pointShopItemText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="사랑의 엽서" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@drawable/left_menu_bg_main"
        android:orientation="vertical" android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="설정" android:layout_marginLeft="6dp" android:textSize="12dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:id = "@+id/accountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_menu_bar_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_menu_ico_account" android:layout_marginLeft="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="계정"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

</LinearLayout>
