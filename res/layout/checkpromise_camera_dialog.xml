<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/popup_create_bg_gray_plate1">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 가져오기"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <Button
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:text = "사진 촬영"
            android:textColor="#888888"
            android:textSize="15dp"
            android:id = "@+id/take_photo_button"
            android:layout_marginTop="10dp"
            android:background="@drawable/popup_create_box1"/>
        
        <Button
            android:layout_width="fill_parent"
            
            android:layout_height="37dp"
            android:text = "앨범에서 사진 선택"
            android:textSize="15dp"
            android:textColor="#888888"
            android:id = "@+id/get_photo_button"
            android:layout_marginTop="3dp"
            android:background="@drawable/popup_create_box1"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp">
        <Button 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id = "@+id/camera_cancel_button"
            android:textSize="15dp"
            android:text = "취 소"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="2dp"
            android:background="@drawable/popup_btn_cancle"/>        
    </LinearLayout>

</LinearLayout>