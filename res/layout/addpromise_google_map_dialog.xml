<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bg_gray_plate"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="위치를 선택하세요."
        android:textColor="#FF228B22"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/map_layout"
        android:layout_width="240dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/popup_box_white"
        android:padding="3dp" >


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/okay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:background="@drawable/popup_btn_ok_2"
            android:text="확인" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/popup_btn_cancle"
            android:text="취소" />
    </LinearLayout>

</LinearLayout>